generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StudentAthlete {
  id               Int      @id @default(autoincrement())
  name             String
  email            String   @unique
  sport            String
  age              Int
  major            String
  gender           String
  ethnicity        String
  instagram        String?
  tiktok           String?
  pinterest        String?
  linkedIn         String?
  xUsername        String?
  industries       String[]
  marketingOptions String[]
  createdAt        DateTime @default(now())
}

model Business {
  id               Int        @id @default(autoincrement())
  name             String
  email            String     @unique
  missionStatement String
  socialLinks      String[]
  website          String
  createdAt        DateTime   @default(now())

  // 1-to-many relationship: a single Business can have multiple Campaigns
  campaigns        Campaign[]
}

model Campaign {
  id                 Int      @id @default(autoincrement())
  campaignSummary    String
  budget             String
  athletePartnerCount String
  sports             String[]
  createdAt          DateTime @default(now())

  // Foreign key to Business
  businessId         Int
  business           Business @relation(fields: [businessId], references: [id])
}


